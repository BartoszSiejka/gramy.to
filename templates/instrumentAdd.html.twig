{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mb-3">
        <nav class="navbar navbar-dark bg-dark w-100">
            <a class="navbar-brand" href="{{ path('home') }}">
                <svg class="bi bi-house-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 3.293l6 6V13.5a1.5 1.5 0 01-1.5 1.5h-9A1.5 1.5 0 012 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 01.5-.5h1a.5.5 0 01.5.5z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 011.414 0l6.647 6.646a.5.5 0 01-.708.708L8 2.207 1.354 8.854a.5.5 0 11-.708-.708L7.293 1.5z" clip-rule="evenodd"/>
                </svg>
            </a>
            <button id="dark-mode" class="btn btn-dark">
                {% if app.request.cookies.get('dark_mode') %}
                    {{ 'theme.light'|trans }}
                {% else %}
                    {{ 'theme.dark'|trans }}
                {% endif %}
            </button>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="dark-blue-text">
                    <i class="fas fa-bars fa-1x">
                        <svg class="bi bi-list" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 013 11h10a.5.5 0 010 1H3a.5.5 0 01-.5-.5zm0-4A.5.5 0 013 7h10a.5.5 0 010 1H3a.5.5 0 01-.5-.5zm0-4A.5.5 0 013 3h10a.5.5 0 010 1H3a.5.5 0 01-.5-.5z" clip-rule="evenodd"/>
                        </svg>
                    </i>
                </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent1">
                <ul class="navbar-nav mr-auto">
                    <a href="{{ path('manage') }}" class="text-white">
                        <li class="nav-item">
                            <span class="my-2">{{ 'main.manage'|trans }}</span>
                        </li>
                    </a>
                    <a href="{{ path('instrument') }}" class="text-white">
                        <li class="nav-item">
                            <span class="my-2">{{ 'instrument.header'|trans }}</span>
                        </li>
                    </a>
                </ul>
            </div>
        </nav>
    </div>
    <div class="row justify-content-center my-3">
        <h1 class="text-center">{{ 'instrument.add.header'|trans }}</h1>
    </div>
    {{ form_start(form) }}
        <div class="row">
            {% if form.name.vars.errors|length > 0 %}
                <div class="form-group has-error col-12">
            {% else %}
                <div class="form-group col-12">
            {% endif %}
                {{ form_label(form.name) }}
                <span class="invalid-feedback">{{ form_errors(form.name) }}</span>
                {{ form_widget(form.name) }}
            </div>
            {% if form.metronome.vars.errors|length > 0 %}
                <div class="form-check has-error col-12">
            {% else %}
                <div class="form-check col-12">
            {% endif %}
                {{ form_label(form.metronome) }}
                {{ form_widget(form.metronome) }}
                <span class="invalid-feedback">{{ form_errors(form.metronome) }}</span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button id="back" class="btn btn-secondary">
                    {{ 'button.back'|trans }}
                </button>
            </div>
            <div class="col-6 justify-content-end">
                {{ form_row(form.save) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}